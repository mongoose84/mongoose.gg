<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>

    <!-- 1️⃣ Target runtime for a self‑contained Windows‑x86 build -->
    <!-- <RuntimeIdentifier>win-x86</RuntimeIdentifier> -->

    <!-- 2️⃣ Force Out‑of‑Process hosting (required on Simply.com) -->
    <AspNetCoreHostingModel>OutOfProcess</AspNetCoreHostingModel>
    <UserSecretsId>9615e88f-ea5a-4f8b-9451-d3b71df157ae</UserSecretsId>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="BCrypt.Net-Next" Version="4.0.3" />
    <PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="9.0" />
    <PackageReference Include="MySqlConnector" Version="2.4.0" />
    <PackageReference Include="Nerdbank.GitVersioning" Version="3.8.118">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Swashbuckle.AspNetCore" Version="6.6.2" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="RiotProxy.Tests/**" />
    <EmbeddedResource Remove="RiotProxy.Tests/**" />
    <None Remove="RiotProxy.Tests/**" />
  </ItemGroup>
</Project>